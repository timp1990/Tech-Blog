<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<button id="new-blog-button" type="button" class="btn btn-primary">Add a blog</button>
<div id="create-blog-form-div" style="display: none;">
  <div class="row mt-4">
    <div class="col-md-6 blog-card">
      <h3 class="blog-card-banner">Create a New blog:</h3>

      <form class="form new-blog-form">
        <div class="form-group">
          <label for="blog-title">Blog Title:</label>
          <input class="form-input" type="text" id="blog-title" name="blog-title" />
        </div>
        <div class="form-group">
          <label for="blog-desc">Description:</label>
          <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>

{{#if blogs.length}}
<div class="col-md-6 blog-card">
  <h3 class="blog-card-banner">Current blogs:</h3>

  {{#each blogs as |blog|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<script src="./js/profile.js"></script>